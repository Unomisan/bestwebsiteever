
pipeline {
  agent {
    label 'helm-slave'
  }
  stages {
    stage('helm init') {
      steps {
        sh """
          helm init --values=helm/artsncrafts/values.yaml helm/artsncrafts/
        """
      }
    }
    stage('helm linting') {
      steps {
        sh """
          export PATH=/usr/local/bin:$PATH
          which helm
          helm lint --values=helm/artsncrafts/values.yaml helm/artsncrafts/
        """
      }
    }
    stage('helm dry run'){
      steps {
        sh """
          export PATH=/usr/local/bin:$PATH
          echo $PATH
          which helm
          helm init helm/artsncrafts -n dev 
        """
      }
    }
  }
}