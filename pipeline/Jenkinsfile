
pipeline {
  agent {
    label 'helm-slave'
  }
  stages {


    stage('helm init') {
      steps {
        sh """
          helm lint helm/artsncrafts/
        """
      }
    }
    stage('helm dry run'){
      steps {
        sh """
          helm upgrade helm/artsncrafts/ -f values.yaml --dry-run --debug 
        """
      }
    }
    stage('helm deploy'){
      steps {
        sh """
          helm upgrade helm/artsncrafts/ -f values.yaml --namespace dev --debug
        """
      }
    }
  }
}