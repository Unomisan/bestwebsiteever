
pipeline {
  agent {
    label 'helm-slave'
  }
  stages {
    stage('helm linting') {
      steps {
        sh """
          helm init
        """
      }
    }
    stage('helm dry run'){
      steps {
        sh """
          helm install helm/artsncrafts/ --dry-run --debug
        """
      }
    }
  }
}